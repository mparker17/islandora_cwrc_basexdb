<?php

/**
 * @file
 * Install hooks for this module.
 */

/**
 * Implements hook_requirements().
 */
function islandora_cwrc_basexdb_requirements($phase) {
  $t = get_t();
  $requirements = array(
    'islandora_cwrc_basexdb' => array('title' => $t('CWRC BaseX XML Database')),
  );
  $library = libraries_detect('basex-api');
  if ($library['installed']) {
    $requirements['islandora_cwrc_basexdb']['severity'] = REQUIREMENT_OK;
    $requirements['islandora_cwrc_basexdb']['value'] = $library['version'];
  }
  else {
    $requirements['islandora_cwrc_basexdb']['severity'] = REQUIREMENT_ERROR;
    $requirements['islandora_cwrc_basexdb']['value'] = $library['error'];
    $requirements['islandora_cwrc_basexdb']['description'] = $t('The <a href="@url">BaseX PHP client Library</a> is missing. <a href="@download">Download</a> and extract into the <code>@directory</code> directory. Rename folder <code>@library-folder</code>.', array(
        '@url' => 'https://github.com/cwrc/basex-api',
        '@download' => 'https://github.com/cwrc/basex-api/archive/master.zip',
        '@directory' => 'sites/default/libraries',
        '@library-folder' => 'basex-api')
    );
  }
  return $requirements;
}




/**
 * Implements hook_install().
 *
 * @see islandora_cwrc_writer_islandora_required_objects()
 */
function islandora_cwrc_basexdb_install() {
}

/**
 * Implements hook_uninstall().
 */
function islandora_cwrc_basexdb_uninstall() {
  //module_load_include('inc', 'islandora', 'includes/solution_packs');
  //islandora_uninstall_solution_pack('islandora_cwrc_basexdb');
  $variables = array(
    'islandora_cwrc_basexdb_server_url',
    'islandora_cwrc_basexdb_server_port',
    'islandora_cwrc_basexdb_database_main',
    'islandora_cwrc_basexdb_database_cache',
  );
  foreach ($variables as $variable) {
    variable_del($variable);
  }
}
